@using Microsoft.AspNet.Identity
@if (Session["UserId"] == null)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("зареєструватися", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("ввійти", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
